<h1>Answers</h1>

<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.descripcion %></td>
        <td><%= answer.question_id %></td>
        <td><%= link_to 'Ver respuesta', answer %></td>
        <td><%= link_to 'Editar', edit_answer_path(answer) %></td>
        <td><%= link_to 'Eliminar', answer, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

