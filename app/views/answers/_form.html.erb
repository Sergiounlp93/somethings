<%= form_for([@question,@answer]) do |f| %>
  <% if @answer.errors.any? %>
    <div id="error_explanation">
      <h2>Oops! No se pudo responder la pregunta!</h2>
      <ul>
      <% answer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br/ >
  <br>
  <h5><strong>Animate a dar una respuesta!</strong></h5>
  <div class="form-group">
    <%= f.label :mi_respuesta %>
    <%= f.text_field :descripcion, class: "form-control" %>
  </div>
  <% if current_user %>
  <div class="actions">
    <%= f.submit "Enviar" %>
  </div>
  <% end %>
<% if !current_user %>
 <p><%= link_to 'Aun no estas registrado? Registrate!',new_user_registration_path %></p> 
 <% end %>
 <% end %>
