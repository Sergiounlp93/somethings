<h1>Denuncias dadas por preguntas inapropiadas</h1>
<% if @question_reports.size == 0 %>
  <h4><strong>Vaya! Todavia no hay denuncias aqui!</strong></h4>
<% else %>
<table>
  <thead>
    <tr>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_reports.each do |question_report| %>
      <tr>
        <td><%= question_report.titulo %></td>
        <td><%= link_to 'Ver pregunta denunciada',question_report.question %></td>
        <td><%= link_to 'Eliminar denuncia', question_report, method: :delete, data: { confirm: 'Estas seguro de eliminar la denuncia?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
<%= link_to 'Volver al menu de reportes', reports_index_path %>